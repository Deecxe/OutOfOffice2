{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numero facture</th>
                <th>Numero reservation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.idReservation }}</td>
                <td>
                    <a href="{{ path('app_facture_show', {'id': facture.id}) }}">Afficher</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune facture</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
