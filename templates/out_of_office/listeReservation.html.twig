{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
Votre liste de reservations :

  {% for reservation in reservations %}


  <div class="card-deck">

  <div class="card">
    <div class="card-body">
      <p class="card-text">{{reservation.cout}}</p>
      <p class="card-text">{{reservation.date}}</p>
      <p class="card-text">{{reservation.heureDebut}}</p>
      <p class="card-text">{{reservation.heureFin}}</p>
      <p class="card-text">{{reservation.nombrePlaceReservees}}</p>
      <form action={{path('modifierReservation',{id:reservation.id})}} method="get">
        <button type="submit">Modifier la reservation</button>
      </form>
<br>
    </div>
  </div>
  
  <br/>
  
  
  {% endfor %}

{% endblock %}