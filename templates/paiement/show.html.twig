{% block title %}Paiement{% endblock %}

{% block body %}
    <h1>Paiement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paiement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ paiement.Nom }}</td>
            </tr>
            <tr>
                <th>NumeroCarte</th>
